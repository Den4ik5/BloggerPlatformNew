{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />
    <!-- TODO: Set target_path and failure_path-->
    <input type="hidden" name="_target_path" value="{{ path('test') }}" /><!--account-->
    <input type="hidden" name="_failure_path" value="{{ path('test') }}" /><!--forgot_password-->
    <input type="hidden" name="go_to" value="{{ path('test') }}" /><!--dashboard-->
    <input type="hidden" name="back_to" value="{{ path('test') }}" /><!--forgot_password-->


    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>