<!DOCTYPE html>
<html>
<head>
    {% block head %}
    <link rel="shortcut icon" href="https://cdn1.savepice.ru/uploads/2018/12/2/1598557ad9c8e9a9486ff2e211443151-full.png" type="image/png">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        {% block title %}
        Page Title
        {% endblock title %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
<style type="text/css">
    body{
        font-size: 18px;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-between;
        background-color: #FFFFF0;
    }
    a{
        text-decoration: none;
        color: #bc9854;
    }
    a:hover{
        color: #826a3d;
    }
    .one{
        width: 20%;
    }
    .main{
        width: 60%;
    }
    .logout{
        width: 150px;
        height: 50px;
        border: 2px solid #000000;
        display: flex;
        align-items: center;
        justify-content: center;
        transition-duration: 0.3s;
        transition-timing-function: ease-out;
    }
    p{
        text-indent: 10px;
    }
    .main1{
        display: flex;
        justify-content: space-between;
    }
    .left{
        width: 25%;
        display: table-row ;
    {#   border: 1px solid #000000; #}
        flex-direction: column;
        justify-content: space-around;
        height: 450px;
        margin: 15px;

        padding: 15px;
        transition-duration: 0.2s;
        transition-timing-function: ease-out;
    }
    .left a{
        display: flex;
        align-items: center;
        width: 160px;
        height: 35px;
    }
    .left a:hover {
        background-color: #FFFDD0;
    }
    .right{
        font: 21px Broadway;
        width: 75%;
        margin: 15px;
        padding: 15px;
    {#  border: 1px solid #000000;  #}
        justify-content: space-around;

    }
    .two{
        width: 20%;
    }
    .header{
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        height: 10vh;
        background:  linear-gradient(to top left, #F6EFD2, #CEAD78);
        border-radius: 20px;
    }
    button{
        height: 30px;
        width: 100px;
        border-radius: 10px;
        background: #CEAD78;
        font : 15px Broadway;
    }
</style>
    {% endblock %}
</head>
<body>
{% block body %}
<div class ="one"></div>
<div class ="main">
    <div class ="header">
        <div сlass="btn1">
            <span><img src=""></span>
            {%  if is_granted('ROLE_MODERATOR') %}
            <a href ="{{ path('moderator_page') }}">Moder</a>
            {% endif %}
        </div>
        <div>
            <a href ="{{ path('test') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/b833ef77ede3187dcb8712b5613eeeb8-full.png"></a>
        </div>
        <div сlass="logout">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href ="{{ path('app_logout') }}" >Log out</a>
                <script>

                </script>
            {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
            <a href ="{{ path('login') }}">Log in</a>
            {% endif %}
        </div>
    </div>
    <div class ="main1">
        <div class="left">
            {% block sideBarMenu %}
                <a href="{{ path('all_posts') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/526e2f60e6b342cea5dc1d0130738dab-full.png" height="18"><p>All posts</p></a>
                <a href="{{ path('preferences') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/15893596da51f0e58ca344c50bb856fa-full.png" height="18"><p>Popular</p></a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('view_my_profile') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/f4da4a2a6c61907cee6655a1f4425a39-full.png" height="17"><p>My profile</p></a>

                    {% if is_granted('ROLE_BLOGGER') %}
                        <a href="{{ path('view_my_post') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/9aa9e066a2f6556f2b9ff8eb6cb5abcf-full.png" height="16"><p>My posts</p></a>
                    {% endif %}
                    <a href="{{ path('preferences') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/5b808fbb5bd860bda122382ab3fa659f-full.png" height="16"><p>Preferences</p></a>

                    {% if is_granted('ROLE_BLOGGER') %}
                        <a href="{{ path('creating_post') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/3d10497cfbf9f5a9a138dc7471ab6550-full.png" height="18"><p>Create new post</p></a>
                    {% endif %}

                    {% if is_granted('ROLE_MODERATOR') %}
                        <a href="{{ path('i_want_to_be_a_blogger_notice') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/9aa9e066a2f6556f2b9ff8eb6cb5abcf-full.png" height="16"><p>View Notices</p></a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('users_greed') }}"><img src="https://cdn1.savepice.ru/uploads/2018/12/2/f4da4a2a6c61907cee6655a1f4425a39-full.png" height="17"><p>Users Greed</p></a>
                    {% endif %}
                {% endif %}
            {% endblock sideBarMenu %}
        </div>
        <div class="right">
            {% block content %}
            {% endblock content %}
        </div>
    </div>
</div>
<div class="two"></div>
{% endblock %}
</body>
</html>
